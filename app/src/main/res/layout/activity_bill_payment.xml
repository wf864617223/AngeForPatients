<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hb.rimi.angel.activity.home.BillPaymentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bpa_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11A8BB"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_bpa"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_login_btn" />


    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_login_left"
        android:text="@string/str_bpa_online_pay" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_view_line" />

    <include layout="@layout/include_pay"></include>
</LinearLayout>