<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mva_bg"
    android:orientation="vertical"
    tools:context="com.hb.rimi.angel.activity.home.CheckPaymentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/cpa_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11A8BB"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_home_menu_3"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_login_btn" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_login_left"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pca_iv_all_list"
                android:layout_width="@dimen/dimen_aa_right_iv"
                android:layout_height="@dimen/dimen_aa_right_iv"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/history" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cpa_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/pca_rl_all_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:padding="@dimen/dimen_ibt_margin">

        <TextView
            android:id="@+id/pac_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/str_cpa_money"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/cpa_tv_tmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pac_tv_label"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/pca_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/color_pay_btn"
            android:text="@string/label_forget_next"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>