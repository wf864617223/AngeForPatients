<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_login_left"
    android:paddingRight="@dimen/dimen_login_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/ica_tv_check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="checkname"
            android:textColor="#1e1e1e"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ica_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_mva_margin_Top"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/shape_round_status"
            android:padding="4dp"
            android:text="status"
            android:textColor="#ff3333" />
    </LinearLayout>


    <TextView
        android:id="@+id/ica_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_anount"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ica_tv_repetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repetition"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ica_tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/ica_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:text="date" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ica_tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cost"
                android:textColor="#1e1e1e" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>