<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_dda_time"
    android:paddingLeft="@dimen/dimen_iat_left"
    android:paddingRight="@dimen/dimen_login_left"
    android:paddingTop="@dimen/dimen_dda_time">

    <TextView
        android:id="@+id/ipt_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/ipt_tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ipt_tv_date" />

    <Button
        android:id="@+id/ipt_btn_status"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_iv_appoint_ok"
        android:textColor="@color/white" />
</RelativeLayout>
