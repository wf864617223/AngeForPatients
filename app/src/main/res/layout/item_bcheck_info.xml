<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_mva_padding_Top"
    android:paddingLeft="@dimen/dimen_mva_padding_left"
    android:paddingRight="@dimen/dimen_mva_padding_left"
    android:paddingTop="@dimen/dimen_mva_padding_Top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_corners_top"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_mva_margin_Left"
        android:paddingLeft="@dimen/dimen_mva_margin_Left"
        android:paddingRight="@dimen/dimen_mva_margin_Left"
        android:paddingTop="@dimen/dimen_mva_margin_Left">


        <TextView
            android:id="@+id/ibi_appProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_mva_type" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="进行中"
            android:textColor="@color/white"
            android:textSize="@dimen/s16p" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_mva_margin_Top"
        android:layout_marginRight="@dimen/dimen_mva_margin_Top"
        android:background="@color/color_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_corners"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_mva_margin_Top"
        android:paddingTop="@dimen/dimen_mva_margin_Top">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_mva_margin_Top"
                android:paddingLeft="@dimen/dimen_mva_margin_Left"
                android:paddingRight="@dimen/dimen_mva_margin_Left"
                android:paddingTop="@dimen/dimen_mva_margin_Top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textColor="@color/color_mva_person"
                    android:textSize="@dimen/dimen_mva_person" />

                <TextView
                    android:id="@+id/ibi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_mva_person"
                    android:textSize="@dimen/dimen_mva_person" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_mva_margin_Top"
                android:paddingLeft="@dimen/dimen_mva_margin_Left"
                android:paddingRight="@dimen/dimen_mva_margin_Left"
                android:paddingTop="@dimen/dimen_mva_margin_Top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到达时间："
                    android:textColor="@color/color_mva_person"
                    android:textSize="@dimen/dimen_mva_person" />

                <TextView
                    android:id="@+id/ibi_come_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_mva_person"
                    android:textSize="@dimen/dimen_mva_person" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_mva_margin_Top"
                android:paddingLeft="@dimen/dimen_mva_margin_Left"
                android:paddingRight="@dimen/dimen_mva_margin_Left"
                android:paddingTop="@dimen/dimen_mva_margin_Top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等待人数："
                    android:textColor="@color/color_mva_person"
                    android:textSize="@dimen/dimen_mva_person" />

                <TextView
                    android:id="@+id/ibi_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_mva_person"
                    android:textSize="@dimen/dimen_mva_person" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ing" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>